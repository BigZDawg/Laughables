}const games = [
  {
    title: "Snake",
    image: "https://upload.wikimedia.org/wikipedia/commons/6/6b/Snake_game.png",
    url: "https://playsnake.org/",
  },
  {
    title: "Tic-Tac-Toe",
    image:
      "https://cdn.pixabay.com/photo/2020/05/03/12/46/tic-tac-toe-5123764_1280.png",
    url: "https://playtictactoe.org/",
  },
  {
    title: "Memory Match",
    image:
      "https://cdn.pixabay.com/photo/2017/10/10/21/46/memory-2832661_1280.png",
    url: "https://www.memozor.com/memory-games/for-kids/online-game",
  },
  {
    title: "Flappy Bird Clone",
    image:
      "https://upload.wikimedia.org/wikipedia/en/0/0b/Flappy_Bird_icon.png",
    url: "https://flappybird.io/",
  },
  {
    title: "2048",
    image:
      "https://play-lh.googleusercontent.com/zJEBpXkz_hLRmNo1NBLB2DjzlhZFGmHgOHUMfokEKkSrKVAeZUZMEyIqv1F2g5KZ57I",
    url: "https://play2048.co/",
  },
];

// Shuffle and pick 3 random games
function getRandomGames(count = 3) {
  const shuffled = [...games].sort(() => 0.5 - Math.random());
  return shuffled.slice(0, count);
}

function renderGames() {
  const container = document.getElementById("game-container");
  const selectedGames = getRandomGames();

  selectedGames.forEach((game) => {
    const card = document.createElement("div");
    card.className = "game-card";

    card.innerHTML = `
      <img src="${game.image}" alt="${game.title}">
      <div class="info">
        <h3>${game.title}</h3>
        <a href="${game.url}" target="_blank">
          <button>Play</button>
        </a>
      </div>
    `;

    container.appendChild(card);
  });
}

document.addEventListener("DOMContentLoaded", renderGames);

